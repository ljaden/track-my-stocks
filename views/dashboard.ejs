<%- include('partials/header') %>
<%- include('partials/navbar') %>

<h1>$100</h1>

<!-- A button to open the popup form -->
<button class="open-button btn btn-primary" onclick="openForm()">+</button>

<!-- The form -->
<div class="form-popup" id="myForm">
  <form action="/dashboard" class="form-container" method="post">
    <h2>Add a new stock</h2>

    <input type="text" placeholder="$Ticker" name="ticker" required>

    <input type="text" placeholder="# of Shares" name="shares" required>

    <input type="text" placeholder="Total Cost" name="cost" required>

    <button type="text" class="btn">Add</button>
    <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
  </form>
</div>


<main>
    <table class="table table-hover">
    <thead>
      <tr>
        <th>Ticker</th>
        <th>Shares</th>
        <th>Price</th>
        <th>P/L</th>
        <th>Average CPS</th>
        <th>Equity</th>
      </tr>
    </thead>

    <tbody>
          <% stocks.forEach(stock => {%>
            <tr>
              <td><%= stock.ticker%></td>
              <td><%= stock.shares%></td>
              <td>$<%= stock.price%></td>
              <td>$<%= stock.profitLoss%></td>
              <td>$<%= stock.avgCPS%></td>
              <td><%= stock.equity%></td>
            </tr>
          <%})%>
    </tbody>
    </table>
  </main>

<script>
  function openForm() {
  document.getElementById("myForm").style.display = "block";
}

function closeForm() {
  document.getElementById("myForm").style.display = "none";
}
</script>
  <%- include('partials/footer') %>